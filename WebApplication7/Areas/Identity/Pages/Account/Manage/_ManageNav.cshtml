@inject SignInManager<UserIdentitycs> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">Profile</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">Email</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">External logins</a></li>
    }
    <li class="nav-item"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData" style="color: black;" onmouseover="this.style.color='#7fad39'" onmouseout="this.style.color='black'">Personal data</a></li>
</ul>
