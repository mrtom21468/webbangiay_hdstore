@model WebApplication7.Models.StoreIn

@{
    ViewData["Title"] = "Create";
}
<div>
    <a asp-action="Index">
        <i class="fa fa-arrow-left"></i>
        Trở lại
    </a>
</div>
<h4>Tạo mới đơn nhập</h4>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductdetailId" class="control-label"></label>
                <select asp-for="ProductdetailId" class ="form-control" asp-items="ViewBag.ProductdetailId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                @Html.DropDownList("SupplierId", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ImprortPrice" class="control-label"></label>
                <input asp-for="ImprortPrice" class="form-control" />
                <span asp-validation-for="ImprortPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
