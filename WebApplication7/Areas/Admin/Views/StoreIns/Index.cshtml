@model IEnumerable<WebApplication7.Models.StoreIn>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Created At
                </th>
                <th>
                    Import Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Supplier
                </th>
                <th>
                    Product Detail
                </th>
                <th>
                    Account
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImprortPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.SupplierId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDetail.ProductdetailId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.AccountId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StoreInId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.StoreInId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.StoreInId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
