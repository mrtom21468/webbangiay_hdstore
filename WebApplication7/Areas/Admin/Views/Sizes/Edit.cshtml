@model WebApplication7.Models.Size

@{
    ViewData["Title"] = "Edit";
}

<h4>Chỉnh sửa size</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SizeId" />
            <div class="form-group">
                <label asp-for="SizeName" class="control-label"></label>
                <input asp-for="SizeName" class="form-control" />
                <span asp-validation-for="SizeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                     <i class="fa fa-save"></i> Lưu
                    </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">        
        <i class="fa fa-arrow-left"></i>
        Trở lại
     </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
