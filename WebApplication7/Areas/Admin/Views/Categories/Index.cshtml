@model IEnumerable<WebApplication7.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<style>

    .icon-red {
        color: red; /* Thay đổi màu sắc thành màu đỏ */
    }
    .icon-green{
        color: green;
    }
</style>
<h1>Index</h1>
<p>
    <a asp-action="Create"><i class="fas fa-plus icon-green"></i> Tạo mới danh mục</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên thể loại
            </th>
            <th>
                Mã thể loại slug
            </th>
            <th>
                Ảnh thể loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategorySlug)
            </td>
            <td>
                    <img style ="width: 50px; height: 50px;" class="img-fluid" src="@item.ImagePath" />
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">
                        <i class="fas fa-edit"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">
                        <i class="fas fa-trash-alt icon-red"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
