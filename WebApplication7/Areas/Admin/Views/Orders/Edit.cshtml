@model WebApplication7.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@{
    string statusPay = Model.PaymentStatus;
    string colorPay = "";
    string PaymentStatusName = "";
    // Xác định màu sắc dựa trên giá trị của Status
    switch (statusPay)
    {
        case "0":
            PaymentStatusName = "Đang thanh toán";
            colorPay = "blue";
            break;
        case "1":
            PaymentStatusName = "Đã thanh toán";
            colorPay = "green";
            break;
        case "2":
            PaymentStatusName = "Thanh toán lỗi";
            colorPay = "red";
            break;
        case "3":
            PaymentStatusName = "Chưa thanh toán";
            colorPay = "orange";
            break;
        default:
            PaymentStatusName = "Lỗi";
            colorPay = "black"; // Màu mặc định nếu không phù hợp với các trường hợp trên
            break;
    }
}
<h4>Cập nhật trạng thái đơn hàng</h4>
<div class="col">
    <h4>Mã đơn hàng @Model.OrderId</h4>
    <p>Phương ngày tạo: @Model.CreatedAt</p>
    <p>Phương thức thanh toán: @Model.PaymentType</p>
    <p>Trạng thái thanh toán: <span style="color: @colorPay">@PaymentStatusName</span></p>
    <p>Tổng thanh toán: @Model.TotalAmount $</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input asp-for="PaymentType" class="form-control" style="display:none" />
            <input asp-for="PaymentStatus" class="form-control" style="display:none" />
            <input asp-for="ReqrIdMoMo" class="form-control" style="display:none" />
            <input asp-for="OrderIdMoMo" class="form-control" style="display:none" />
            <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId" style="display:none"></select>
            <input asp-for="TotalAmount" class="form-control" style="display:none" />
            <input asp-for="CreatedAt" class="form-control" style="display:none" />

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownList("Status", (SelectList)ViewBag.Statuses, null, new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <i class="fa fa-arrow-left"></i>
        Trở lại
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
