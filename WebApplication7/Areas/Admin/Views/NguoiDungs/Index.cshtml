@{
}
@model IEnumerable<WebApplication7.Models.UserIdentitycs>

<h2>Users List @ViewBag.Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Roles</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <th>@user.PhoneNumber</th>
                <td>
                    @foreach (var role in await ViewBag.UserManager.GetRolesAsync(user))
                    {
                        @role <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

