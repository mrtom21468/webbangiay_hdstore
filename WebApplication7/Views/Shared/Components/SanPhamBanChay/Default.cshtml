@model List<WebApplication7.Models.Product>
@using WebApplication7.Models
@{
    var Category = Model.GroupBy(x => x.Category.CategoryId)
                    .Select(g => g.First())
                    .Select(p=>p.Category);
}
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm mới</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach (var i in Category)
                        {
                            <li data-filter=".@i.CategorySlug">@i.CategoryName</li>
                        }
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var i in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @i.Category.CategorySlug">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg=@i.ImagePath>
@*                             <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul> *@
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-area="" asp-controller="SanPhamChiTiet" asp-action="Index" asp-route-id="@i.ProductId" >@i.ProductName</a></h6>
                            <h5>@i.ProductDetails.First().SellingPrice $</h5>
                        </div>
                    </div>
                 </div>
            }
            
        </div>
    </div>
</section>