@model List<WebApplication7.ViewModel.TopProductsViewModel>
@using WebApplication7.Models
<div class="product__discount">
    <div class="section-title product__discount__title">
        <h2>Sản phẩm bán chạy</h2>
    </div>
    <div class="row">
        <div class="product__discount__slider owl-carousel">
            @foreach(var i in Model)
            {
                <div class="col-lg-4">
                    <div class="product__discount__item">
                        <div class="product__discount__item__pic set-bg"
                             data-setbg=@Url.Content(@i.Products.ImagePath)>
                            <div class="text-danger ml-3 mt-2">
                                <i class="fa fa-fire"></i> Đã bán: @i.TotalQuantity
                            </div>
@*                             <ul class="product__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul> *@
                        </div>
                        <div class="product__discount__item__text">
                            <span>@i.Products.Category.CategoryName</span>
                            @{
                                if (@i.ProductDetails != null)
                                {
                                    <h5><a asp-controller="SanPhamChiTiet" asp-action="Index" asp-route-id="@i.Products.ProductId">@i.Products.ProductName</a></h5>
                                    <div class="product__item__price">$ @i.ProductDetails.SellingPrice</div>
                                }
                                else
                                {
                                    <h5><a>@i.Products.ProductName</a></h5>
                                    <div class="product__item__price" style="color:red">Hết hàng</div>
                                }
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
