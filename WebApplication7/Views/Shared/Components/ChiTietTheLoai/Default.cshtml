@model List<WebApplication7.Models.Category>

<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach(var i in Model)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg=@i.ImagePath>
                            <h5><a asp-area="" asp-controller="SanPhamShop" asp-action="Index" asp-route-theloai="@i.CategoryId">@i.CategoryName</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>