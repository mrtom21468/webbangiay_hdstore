        </div>
    </div>
</div>
<!-- Map End -->
<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Thông tin hỗ trợ</h2>
                </div>
            </div>
        </div>
        <form asp-controller="LienHe" asp-action="SubmitSupport" method="post">
            <div class="row">
                <div class="col-lg-6 col-md-6">

                    <span asp-validation-for="HoTen" class="text-danger"></span>
                    <input type="text" asp-for="HoTen" placeholder="Họ và tên">
                </div>
                <div class="col-lg-6 col-md-6">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="text" asp-for="Email" placeholder="Email của bạn">
                </div>
                <div class="col-lg-12 text-center">

                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                    <textarea asp-for="NoiDung" placeholder="Your message"></textarea>

                    <button type="submit" name="" class="site-btn">Gửi yêu cầu hỗ trợ</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Contact Form End -->